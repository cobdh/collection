<?xml version="1.0" encoding="utf-8"?>
<project
    default="xar"
    name="collection"
>
    <xmlproperty file="expath-pkg.xml"/>
    <property
        name="project.version"
        value="${package(version)}"
    />
    <property
        name="project.app"
        value="collection"
    />
    <property
        name="build.dir"
        value="build"
    />
    <target name="xar">
        <mkdir dir="${build.dir}"/>
        <zip
            basedir="."
            destfile="${build.dir}/${project.app}-${project.version}.xar"
            excludes="${build.dir}/* docker/** tests/**"
        />
    </target>
</project>
